<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Treinador de Digitação - Crianças</title>
  <style>
    body { font-family: Arial, sans-serif; background-color: #f5f5f5; }
    .container { max-width: 600px; margin: auto; background: white; padding: 20px; border-radius: 8px; text-align: center; }
    h1 { font-size: 24px; }
    #word { font-size: 28px; margin: 20px 0; }
    input { font-size: 18px; padding: 8px; width: 80%; }
    button { font-size: 16px; padding: 8px 12px; margin: 10px; }
    .stats { margin-top: 20px; }
  </style>
</head>
<body>
  <div class="container">
    <h1>Treinador de Digitação</h1>
    <p>Digite a palavra abaixo e pressione Enter</p>
    <div id="word">Clique em Iniciar</div>
    <input type="text" id="input" placeholder="Digite aqui" disabled />
    <div>
      <button onclick="startGame()">Iniciar</button>
    </div>
    <div class="stats">
      Acertos: <span id="correct">0</span> | Erros: <span id="wrong">0</span>
    </div>
  </div>

  <script>
    const words = [
      'casa','bola','gato','pato','mãe','pai','amigo','livro','sol','lua',
      'árvore','flor','peixe','carro','mesa','cadeira','sala','caneta','janela','sapato'
    ];

    let correct = 0, wrong = 0, currentWord = '';

    function startGame() {
      correct = 0; wrong = 0;
      document.getElementById('correct').textContent = correct;
      document.getElementById('wrong').textContent = wrong;
      document.getElementById('input').disabled = false;
      nextWord();
    }

    function nextWord() {
      currentWord = words[Math.floor(Math.random() * words.length)];
      document.getElementById('word').textContent = currentWord;
      document.getElementById('input').value = '';
      document.getElementById('input').focus();
    }

    document.getElementById('input').addEventListener('keyup', function(e) {
      if (e.key === 'Enter') {
        if (this.value.trim() === currentWord) {
          correct++;
          document.getElementById('correct').textContent = correct;
        } else {
          wrong++;
          document.getElementById('wrong').textContent = wrong;
        }
        nextWord();
      }
    });
  </script>
</body>
</html>